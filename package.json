{
  "name": "react-flipbox",
  "version": "1.0.0",
  "description": "Flipbox animation",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "lint": "eslint \"{**/*,*}.{js,ts,jsx,tsx}\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/victor-pg/react-flipbox.git"
  },
  "keywords": [
    "flipbox",
    "react"
  ],
  "author": "victor-pg",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/victor-pg/react-flipbox/issues"
  },
  "homepage": "https://github.com/victor-pg/react-flipbox#readme",
  "dependencies": {
    "@types/react": "^18.2.14",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.1.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.43.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ]
}
